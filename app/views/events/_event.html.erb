<div id="event_<%= event.id %>">
  <h3>Details for '<%= link_to event.name, event_path(event) %>'</h3>

  Description: <%= event.description %></br>
  Date: <%= event.date %></br>
  Starts At: <%= event.start_time %></br>
  Ends At: <%= event.end_time %></br>
  Venue: <%= event.location.venue %></br>
  Street Address: <%= event.location.street_address %></br>
  City: <%= event.location.city %></br>
  State: <%= event.location.state %></br>
  Zipcode: <%= event.location.zipcode %></br>

  <%= link_for_attendees(event)  %>

</div>

